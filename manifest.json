{
	"manifest_version": 2,
	"name": "redirector",
	"version": "0.1.2",
	"description": "Redirects youtube video links to invidio.us",
	"icons": {
		"48": "assets/icon-48-normal.png"
	},
	"browser_action": {
		"default_icon": "assets/icon-48-normal.png",
		"default_title": "redirector"
	},
	"permissions": [
		"storage"
	],
	"applications": {
		"gecko": {
			"id": "redirector-addon@hnnng.dev"
		}
	},
	"background": {
		"scripts": [
			"src/background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/watch?*"
			],
			"js": [
				"src/redirector-youtube.js"
			],
			"run_at": "document_start"
		}
	]
}
